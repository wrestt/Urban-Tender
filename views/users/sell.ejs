<% include ../partials/header %>
  <div class="card-panel">
    <div class="row">
      <div class="col s8 offset-s2">
        <h4>
          <%= user.username ? user.username : '' %>
        </h4>
        </br>
        </br>
        <img style="max-width: 350px" src="<%= user.avatar%>" alt="<%= user.name%> Avatar Photo" />
        </br>
        </br>
        <a href="mailto:<%=user.email%>?subject=Hello,<%=user.username%>">
          <button type="button" class="button btn">Contact Seller</button>
        </a>
        </br>
        </br>
        <h4>Items For Sale By
          <%= user.username%>
        </h4>
        <ul class="collection">
          <% user.items.forEach(function(item){ %>
            <li class="collection-item avatar">
              <img src="<%= item.image%>" alt="<%= user.name%> <%= item.description%>" class="circle">
              <span class="title">
                <a href="/items/<%= item._id%>">
                  <%= item.name%>
                </a>
              </span>
              <p>
                <%= moment(item.date).format('l') %>
                  <br>
                  <%= item.description%>
              </p>
              <a href="/items/<%= item._id%>" class="secondary-content"><i class="material-icons">grade</i></a>
            </li>
            <% })%>
        </ul>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>
