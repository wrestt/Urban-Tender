<% include ../partials/header %>
  <div class="card-panel">
    <div class="row">
      <div class="col s8 offset-s2">
        <h1>Sign up</h1>
      </div>
    </div>
    <div class="row">
      <form id="item-form" method="POST" action="/signup">
        <div class="row">
          <div class="col s6 offset-s3">
            <div class="form-group">
              <label> First Name:
                <input type="text" id="firstName" name="user[firstName]" class="form-control validate" autofocus>
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col s6 offset-s3">
            <div class="form-group">
              <label> Last Name:
                <input type="text" id="lastName" name="user[lastName]" class="form-control validate" autofocus>
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col s6 offset-s3">
            <div class="form-group">
              <label> Username:
                <input type="text" id="userName" name="user[username]" class="form-control validate" autofocus>
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col s6 offset-s3">
            <div class="form-group">
              <label>Email:
                <input type="email" id="email" name="user[email]" class="form-control validate">
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col s6 offset-s3">
            <div class="form-group">
              <label>Phone Number:
                <input type="tel" id="phoneNumber" name="user[phoneNumber]" class="form-control validate">
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col s6 offset-s3">
            <div class="form-group">
              <label>Profile Picture:
                <input type="text" id="avatar" name="user[avatar]" class="form-control" value="HTML Link">
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col s6 offset-s3">
            <div class="form-group">
              <label> Password:
                <input type="password" id="password" name="user[password]" class="form-control">
              </label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col s6 offset-s3">
            <div class="form-group">
              <input type="submit" value="Sign up" class="btn btn-primary">
            </div>
          </div>
        </div>
      </form>
      <div class="row">
        <div class="col s6 offset-s3">
          <form id="up-form">
            <div class="file-field input-field">
              <div class="btn">
                <span>Upload Image</span>
                <input type="file">
              </div>
              <div class="file-path-wrapper">
                <input id="item-image" class="file-path validate" type="text" value="">
              </div>
            </div>
            <button class="hidden-button" type="submit">Upload</button>
          </form>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col s6 offset-s3">
        <a href="/login">Already have an account? Login in here</a>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>
