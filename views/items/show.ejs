<% include ../partials/header %>
  <div class="card-panel">
    <div class="row">
      <div class="col s8 offset-s2">
        <h1>
          <%= item.name%>
        </h1>
        <h4>
          <%= item.kind.toUpperCase()%>
        </h4>
        </br>
        <h5>Harvest Date:
          <%= moment(item.date).format('l')%>
        </h5>
        <img src="<%= item.image%>" alt="<%= item.name%> Image Photo" />
        </br>
        </br>
        <p class="container">
          <%=item.description%>
        </p>
        <p>
          Price: $<%=item.price%>.00</br>
          Quantity: <%=item.quantity%>
        </p>
        </br>
        </br>
        <a href="/users/<%=item.seller[0]._id%>/items"><button type="button" class="button btn">Seller</button></a>
        <a href="mailto:<%=item.seller[0].email%>?subject=Hello,<%=item.seller[0].firstName%>">
          <button type="button" class="button btn">Contact Seller</button>
        </a>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>
